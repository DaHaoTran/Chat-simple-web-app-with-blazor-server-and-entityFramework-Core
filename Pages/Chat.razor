@page "/chat"
@using ChatSimple.Data
@inject ChatSimple.Services.ITestSvc _testSvc
@inject NavigationManager _nav

<div class="container d-flex justify-content-center">
    <div class="card mt-5">
        <div class="d-flex flex-row justify-content-between p-3 adiv text-white">
            <i class="fas fa-chevron-left"></i>
            @* <span class="pb-3">Hi, @LoginState.name</span>  (User access has not been processed)*@
            Live chat 
            <i class="fas fa-times"></i>
        </div>

        @foreach(var i in _messages)
        {
            <div class="d-flex flex-row p-3">
                <div class="chat ml-2 p-3">
                    @* <span class="text-muted dot">@i.name</span>
                    <br /> *@
                    <span class="text-muted dot">@i.content</span>
                    <br />
                    <span class="text-muted dot">@i.time</span>
                </div>
            </div>
        }

        <div class="form-group px-3">
            <EditForm class="row" Model="_message" OnSubmit="@Post">
                <div class="col-auto">
                    <InputText class="form-control" @bind-Value=_message.content></InputText>
                </div>
                <div class="col-auto">
                    <input type="submit" class="btn btn-primary" value="Send" style="border-radius: 20px;font-size: 10px"/>
                </div>
            </EditForm>
        </div>
    </div>
</div>
